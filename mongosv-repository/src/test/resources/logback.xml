<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%5p %40.40c:%4L - %m%n</pattern>
    </encoder>
  </appender>
  <logger name="org.springframework.data.mongodb.repository.query" level="TRACE"/>
  <root level="WARN">
    <appender-ref ref="stdout"/>
  </root>
</configuration>
